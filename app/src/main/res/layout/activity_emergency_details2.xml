    <com.atgc.hd.widget.MyGridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="27dp"
        android:horizontalSpacing="16.5dp"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="16.5dp"
        android:visibility="visible">

    </com.atgc.hd.widget.MyGridView>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/grid"
        android:layout_alignRight="@+id/grid"
        android:layout_below="@+id/grid"
        android:background="@color/line_color_gray_d1"></View>

    <TextView
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/grid"
        android:layout_alignRight="@+id/grid"
        android:layout_below="@+id/line"
        android:layout_marginTop="26dp"
        android:text="地点：住宅小区2号"
        android:textSize="@dimen/text_size_xxlarge" />

    <TextView
        android:id="@+id/tv_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/grid"
        android:layout_alignRight="@+id/grid"
        android:layout_below="@+id/tv_place"
        android:layout_marginTop="26dp"
        android:text="事件：发现可疑人员，当时的发生科技大厦啊圣诞节啊"
        android:textSize="@dimen/text_size_xxlarge" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/grid"
        android:layout_below="@+id/tv_event"
        android:layout_marginTop="26dp"
        android:text="2018/01/22  11:30"
        android:textColor="@color/color_gray_a"
        android:textSize="@dimen/text_size_large" />
</RelativeLayout>