<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="27dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <!--<horizontalScrollViewView-->
    <!--android:id="@+id/horizontalScrollView"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginBottom="40dp"-->
    <!--android:layout_marginLeft="34dp"-->
    <!--android:layout_marginRight="34dp"-->
    <!--android:layout_marginTop="27dp"-->
    <!--android:horizontalSpacing="16.5dp"-->
    <!--android:numColumns="4"-->
    <!--android:scrollbars="none"-->
    <!--android:verticalSpacing="16.5dp"-->
    <!--android:visibility="gone">-->
    <!--</horizontalScrollViewView>-->

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/horizontalScrollView"
        android:layout_alignRight="@+id/horizontalScrollView"
        android:layout_below="@+id/horizontalScrollView"
        android:background="@color/line_color_gray_d1"></View>

    <TextView
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/horizontalScrollView"
        android:layout_alignRight="@+id/horizontalScrollView"
        android:layout_below="@+id/line"
        android:layout_marginTop="26dp"
        android:text="地点：住宅小区2号"
        android:textSize="@dimen/text_size_xxlarge" />

    <TextView
        android:id="@+id/tv_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/horizontalScrollView"
        android:layout_alignRight="@+id/horizontalScrollView"
        android:layout_below="@+id/tv_place"
        android:layout_marginTop="26dp"
        android:text="事件：发现可疑人员，当时的发生科技大厦啊圣诞节啊"
        android:textSize="@dimen/text_size_xxlarge" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/horizontalScrollView"
        android:layout_below="@+id/tv_event"
        android:layout_marginTop="26dp"
        android:text="2018/01/22  11:30"
        android:textColor="@color/color_gray_a"
        android:textSize="@dimen/text_size_large" />
</RelativeLayout>