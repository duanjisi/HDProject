<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/spacing_3x"
    android:layout_marginLeft="@dimen/spacing_4x"
    android:layout_marginRight="@dimen/spacing_4x"
    android:layout_marginTop="@dimen/spacing_4x"
    android:background="@drawable/shape_white_round"
    >

    <com.atgc.hd.comm.widget.CustomTextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_1x"
        android:paddingLeft="@dimen/spacing_1x"
        android:paddingRight="@dimen/spacing_4x"
        android:text="2017-09-24 20:03:57"
        android:textColor="@color/meta_text_primary"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_title2"
        android:layout_below="@+id/tv_date"
        android:layout_marginTop="@dimen/spacing_3x"
        android:gravity="right"
        android:paddingLeft="@dimen/spacing_2x"
        android:text="派遣地点："
        android:textColor="@color/meta_text_primary"
        android:textSize="@dimen/text_size_medium"
        />

    <TextView
        android:id="@+id/tv_content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_title1"
        android:layout_toRightOf="@+id/tv_title1"
        android:paddingRight="@dimen/spacing_2x"
        android:text="--"
        android:textColor="@color/meta_text_secondary"
        android:textSize="@dimen/text_size_medium" />

    <!---->
    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content1"
        android:layout_marginTop="@dimen/spacing_2x"
        android:paddingLeft="@dimen/spacing_2x"
        android:text="派遣内容："
        android:textColor="@color/meta_text_primary"
        android:textSize="@dimen/text_size_medium"
         />

    <TextView
        android:id="@+id/tv_content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_title2"
        android:layout_toRightOf="@+id/tv_title2"
        android:paddingRight="@dimen/spacing_2x"
        android:text="--"
        android:textColor="@color/meta_text_secondary"
        android:textSize="@dimen/text_size_medium" />

    <include
        android:id="@+id/line"
        layout="@layout/view_list_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/spacing_2x"
        android:layout_marginLeft="@dimen/spacing_1x"
        android:layout_marginRight="@dimen/spacing_1x"
        android:layout_below="@+id/tv_content2"/>

    <!---->
    <TextView
        android:id="@+id/tv_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginTop="@dimen/spacing_2x"
        android:paddingLeft="@dimen/spacing_2x"
        android:text="相关附件："
        android:textColor="@color/meta_text_primary"
        android:textSize="@dimen/text_size_medium"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/tv_title3"
        android:layout_toRightOf="@+id/tv_title3"
        android:src="@drawable/ic_blod_down"/>

    <ImageView
        android:id="@+id/image_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_3x"
        android:paddingTop="@dimen/spacing_2x"
        android:paddingRight="@dimen/spacing_3x"
        android:paddingBottom="@dimen/spacing_2x"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/dispatch_report_selector"/>

</RelativeLayout>